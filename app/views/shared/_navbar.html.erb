<div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Place', root_path, class: 'navbar-brand' %>
      </div>

      <ul class="nav navbar-nav navbar-left">

        
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= t('menu.articles') %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <li><%= link_to t('menu.articles'), root_path %></li>
            </li>
            <% if signed_in? and (current_user.admin? or current_user.author?) %>
              <li>
                <%= link_to t('menu.new_article'), new_article_path %>
              </li>
            <% end %>

          </ul>
        </li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= t('menu.polls') %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <li><%= link_to t('menu.polls'), polls_path %></li>
            </li>
            <% if signed_in? and current_user.admin? %>
              <li>
                <%= link_to t('menu.new_poll'), new_poll_path %>
              </li>
            <% end %>
          </ul>
        </li>
        <% if signed_in? %>
          <li><%= link_to t('menu.users'), users_path %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <%= t('menu.languages.lang') %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to t('menu.languages.en'), change_locale_path(:en) %>
          </li>
          <li>
            <%= link_to t('menu.languages.ru'), change_locale_path(:ru) %>
          </li>
        </ul>
      </li>
      <% if signed_in? %>
        <li><%= link_to t('menu.sign_out'), signout_path, method: "delete" %></li>
        <li><%= link_to t('menu.edit_profile'), edit_user_path(current_user) %></li>
      <% else %>
        <li><a href= "/signup"><span class="glyphicon glyphicon-user"></span> <%= t('menu.sign_up') %></a></li>
        <li><a href= "/signin"><span class="glyphicon glyphicon-log-in"></span> <%= t('menu.login') %></a></li>
      <% end %>
    </ul>
    </div>
  </div>